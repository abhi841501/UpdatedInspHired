<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployerActivity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <ImageView
                    android:id="@+id/regArrowBackImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/black" />
            </RelativeLayout>


            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/bottombanner">

            </ImageView>

            <RadioGroup
                android:id="@+id/radioGroupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/employerRegBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/darkRed"
                    android:checked="true"
                    android:paddingLeft="10dp"
                    android:text="Employer"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <RadioButton
                    android:id="@+id/employeeRegBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/darkRed"
                    android:paddingLeft="10dp"
                    android:text="Employee "
                    android:textColor="@color/black"
                    android:textSize="19dp" />
            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="60dp"
                android:background="#138AAB"
                android:elevation="14dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="40dp">



                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#138AAB"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Register"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"></TextView>


                    <LinearLayout
                        android:id="@+id/linearRegisterEmployee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginTop="40dp"
                                android:src="@drawable/pin_code"
                                android:tint="@color/Red"
                                tools:ignore="UseAppTint" />

                            <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="22dp"
                            android:background="@drawable/login_backgrounf">

                            <EditText
                                android:id="@+id/firstNameRegEmpee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="15dp"
                                android:background="@null"
                                android:hint="Enter your name"
                                android:inputType="textPersonName"
                                android:padding="6dp"
                                android:textSize="15dp" />

                        </RelativeLayout>
                        </RelativeLayout>


                        <!--
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="45dp"
                                            android:background="@drawable/login_backgrounf"
                                            android:layout_marginTop="25dp"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginEnd="15dp">

                                            <EditText
                                                android:id="@+id/lastNameRegEmpee"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_alignParentLeft="true"
                                                android:layout_centerInParent="true"
                                                android:layout_marginLeft="15dp"
                                                android:background="@null"
                                                android:hint="Enter last name"
                                                android:inputType="textPersonName"
                                                android:padding="6dp"
                                                android:textSize="15dp" />

                                        </RelativeLayout>-->


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/pin_code"
                            android:tint="@color/Red"
                            tools:ignore="UseAppTint" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="22dp"
                            android:background="@drawable/login_backgrounf">

                            <EditText
                                android:id="@+id/emailRegEmpee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="15dp"
                                android:background="@null"
                                android:hint="Enter your email"
                                android:padding="6dp"
                                android:textSize="15dp" />

                        </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/pin_code"
                            android:tint="@color/Red"
                            tools:ignore="UseAppTint" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginEnd="22dp"
                                android:background="@drawable/login_backgrounf">

                                <EditText
                                    android:id="@+id/phoneNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toLeftOf="@+id/sendOTPReg"
                                    android:background="@null"
                                    android:hint="Enter phone number"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:padding="6dp"
                                    android:textSize="15dp" />


                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/sendOTPReg"
                                    android:layout_width="70dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/reg_sendbtn_background"
                                    android:text="Send otp"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"></androidx.appcompat.widget.AppCompatButton>


                            </RelativeLayout>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/relativeUploadd"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/pin_code"
                            android:tint="@color/Red"
                            tools:ignore="UseAppTint" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="22dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginEnd="22dp"
                                android:background="@drawable/login_backgrounf">

                                <TextView
                                    android:id="@+id/ProfilePreviousDetailstxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toLeftOf="@+id/uploadPdetailsBtn"
                                    android:gravity="center_vertical"
                                    android:scrollbars="vertical"
                                    android:text="Upload your previous company details"
                                    android:textSize="14dp" />


                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/uploadPdetailsBtn"
                                    android:layout_width="60dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/reg_sendbtn_background"
                                    android:text="Upload"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="12dp"></androidx.appcompat.widget.AppCompatButton>
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RelativeUploadVideo"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="22dp"
                            android:visibility="gone"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="22dp"
                            android:background="@drawable/login_backgrounf">

                            <TextView
                                android:id="@+id/editProfileUploadVideo"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="15dp"
                                android:gravity="center"
                                android:hint="Upload video"
                                android:textSize="15dp" />


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/uploadReg"
                                android:layout_width="80dp"
                                android:layout_height="32dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/reg_sendbtn_background"
                                android:text="Upload"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="14dp"></androidx.appcompat.widget.AppCompatButton>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/pin_code"
                            android:tint="@color/Red"
                            tools:ignore="UseAppTint" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="22dp"
                            android:background="@drawable/login_backgrounf">

                            <EditText
                                android:id="@+id/editPasswordRegEmpee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="15dp"
                                android:background="@null"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:padding="6dp"
                                android:textSize="15dp" />

                            <ImageView
                                android:id="@+id/regPasswordHidden"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:foregroundGravity="center"
                                android:src="@drawable/hidden0"
                                app:tint="@color/darkgrey" />

                            <ImageView
                                android:id="@+id/regPasswordShow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:foregroundGravity="center"
                                android:src="@drawable/eye"
                                android:visibility="gone"
                                app:tint="@color/darkgrey" />


                        </RelativeLayout>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/pin_code"
                            android:tint="@color/Red"
                            tools:ignore="UseAppTint" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="22dp"
                            android:background="@drawable/login_backgrounf">

                            <EditText
                                android:id="@+id/editConfirmPasswordRegEmpee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="15dp"
                                android:background="@null"
                                android:hint="Confirm password"
                                android:inputType="textPassword"
                                android:padding="6dp"
                                android:textSize="15dp" />


                            <ImageView
                                android:id="@+id/regConfirmPHidden"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:foregroundGravity="center"
                                android:src="@drawable/hidden0"
                                app:tint="@color/darkgrey" />

                            <ImageView
                                android:id="@+id/regConfirmPShow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:foregroundGravity="center"
                                android:src="@drawable/eye"
                                android:visibility="gone"
                                app:tint="@color/darkgrey" />

                        </RelativeLayout>
                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/regSignUpButton"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/round_corner_login"
                            android:text="Register"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18dp"></androidx.appcompat.widget.AppCompatButton>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/notMember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Already have  an account ? "
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/SignInEmployeeReg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Sign In"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>