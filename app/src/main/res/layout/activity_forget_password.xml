<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".EmployerActivity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <ImageView
                    android:id="@+id/forgotArrowImg"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/black" />

            </RelativeLayout>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/bottombanner"></ImageView>

            <RadioGroup
                android:id="@+id/radioGroupBtnForget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/employerMobileBtnBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1.2"
                    android:buttonTint="@color/darkRed"
                    android:checked="true"
                    android:paddingLeft="10dp"
                    android:text="Mobile No"
                    android:textColor="@color/black"
                    android:textSize="19dp" />

                <RadioButton
                    android:id="@+id/employerEmailBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:buttonTint="@color/darkRed"
                    android:paddingLeft="10dp"
                    android:text="Email "
                    android:textColor="@color/black"
                    android:textSize="19dp" />
            </RadioGroup>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:baselineAligned="false"
                android:elevation="14dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="40dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/skyBlue"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Forget Password"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"></TextView>


                    <RelativeLayout
                        android:id="@+id/relativeForgetN"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/login_backgrounf">

                        <EditText
                            android:id="@+id/phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="40dp"
                            android:background="@null"
                            android:hint="Phone"
                            android:inputType="number"
                            android:maxLines="10"
                            android:padding="6dp"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_baseline_local_phone_24"
                            app:tint="@color/skyBlue" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeForgetEmail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/login_backgrounf"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/emailForget"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="40dp"
                            android:background="@null"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="10"
                            android:padding="6dp"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/emaile"
                            app:tint="@color/skyBlue" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/GetOtpBtn"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/round_corner_login"
                        android:text="Get OTP"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp"></androidx.appcompat.widget.AppCompatButton>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>