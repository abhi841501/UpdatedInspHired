<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EmployeeActivity.CreateSlotActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/backArrowCSlots"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical"
            android:text="Create Slots"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="Select Start Date &amp; Start Time"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearStartDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/salaryrange">

                <TextView
                    android:id="@+id/startDateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Start Date "
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearStartTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/salaryrange">

                <TextView
                    android:id="@+id/startTimetxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Start Time"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="Select End Date &amp; End Time"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearEndDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/salaryrange">

                <TextView
                    android:id="@+id/endDateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="End Date "
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearEndTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/salaryrange">

                <TextView
                    android:id="@+id/endTimeTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="End Time"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createSlotsBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_black_background"
        android:text="Create Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"></androidx.appcompat.widget.AppCompatButton>





</LinearLayout>