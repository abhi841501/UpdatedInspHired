<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".FirstInterfaceApp.EmployerJobPostActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgbackEmployer"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/black" />


            <TextView
                android:id="@+id/employerHeading"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="employer"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"></TextView>

          <!--  <View
                android:id="@+id/employerHeadingView"
                android:layout_width="95dp"
                android:layout_height="3dp"
                android:layout_marginTop="-5dp"
                android:layout_below="@+id/employerHeading"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="@color/black" />-->


        </RelativeLayout>


        <ImageView
            android:id="@+id/logoooo"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/bottombanner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoooo"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="Are you searching for ?"
            android:textColor="@color/black"
            android:textSize="22dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/linearTemporaryJobPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="4.5"
                android:background="@drawable/job_seeker_interface"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/viewTemporaryJPost"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:gravity="center" />


                    <TextView
                        android:id="@+id/TemporaryJobPostTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="Temporary Candidates"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearORR"
                android:layout_width="0dp"
                android:layout_height="70sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Orr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal"
                    android:text="OR"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <!-- <View
                    android:id="@+id/viewOrr"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@+id/jobSeeker"
                    android:layout_marginTop="-26dp"
                    android:background="@color/white"
                    android:gravity="center" />
-->
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearPermanentJPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="4.5"
                android:background="@drawable/job_seeker_interface"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <View
                        android:id="@+id/viewPermanentJPost"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/permanentJobsPost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:text="Permanent Candidates"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>