        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bottombanner" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/job_seeker_interface"
                    android:gravity="center"
                    app:cardCornerRadius="20dp">


                    <TextView
                        android:id="@+id/areYouA"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="ARE YOU A ?"
                        android:textColor="@color/white"
                        android:textSize="32dp"></TextView>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/areYouA"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:background="@color/white"
                        android:gravity="center" />

                    <LinearLayout
                        android:id="@+id/linearjobseekerrrr"
                        android:layout_width="250dp"
                        android:layout_height="70sp"
                        android:layout_below="@+id/view1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/jobSeeker"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="18dp"
                            android:gravity="center_horizontal"
                            android:text="EMPLOYEE"
                            android:textColor="@color/white"
                            android:textSize="32dp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/linearjobseekerrrr"
                        android:layout_gravity="center"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:background="@color/white"
                        android:gravity="center" />

                    <LinearLayout
                        android:id="@+id/linearEmployer"
                        android:layout_width="250dp"
                        android:layout_height="70sp"
                        android:layout_below="@+id/linearjobseekerrrr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/employer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="18dp"
                            android:gravity="center_horizontal"
                            android:text="EMPLOYER"
                            android:textColor="@color/white"
                            android:textSize="32dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/linearEmployer"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:background="@color/white"
                        android:gravity="center" />

                    <LinearLayout
                        android:id="@+id/linearCorporatorrr"
                        android:layout_width="250dp"
                        android:layout_height="70sp"
                        android:layout_below="@+id/linearEmployer"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/corporator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="18dp"
                            android:gravity="center_horizontal"
                            android:text="CORPORATE"
                            android:textColor="@color/white"
                            android:textSize="32dp" />

                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
</LinearLayout>