<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstInterfaceApp.FirstInterfaceAppActivity">

    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backImgAre"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:tint="@color/black" />


    </RelativeLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/job_seeker_interface"
                    android:gravity="center"
                    app:cardCornerRadius="20dp">


                    <TextView
                        android:id="@+id/areYouA"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:text="ARE YOU A"
                        android:textColor="@color/white"
                        android:textSize="32dp"
                        android:textStyle="bold"></TextView>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="160dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="-7dp"
                        android:layout_below="@+id/areYouA"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:gravity="center" />

                    <LinearLayout
                        android:id="@+id/linearjobseekerrrr"
                        android:layout_width="250dp"
                        android:layout_height="70sp"
                        android:layout_below="@+id/view1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/job_seeker_background"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/jobSeeker"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="18dp"
                            android:gravity="center_horizontal"
                            android:text="JOBSEEKER"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_below="@+id/jobSeeker"
                            android:layout_gravity="center"
                            android:layout_marginLeft="65dp"
                            android:layout_marginTop="-26dp"
                            android:layout_marginRight="65dp"
                            android:background="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearEmployer"
                        android:layout_width="250dp"
                        android:layout_height="70sp"
                        android:layout_below="@+id/linearjobseekerrrr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/job_seeker_background"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/employer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="18dp"
                            android:gravity="center_horizontal"
                            android:text="EMPLOYER"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_below="@+id/employer"
                            android:layout_marginLeft="65dp"
                            android:layout_marginTop="-26dp"
                            android:layout_marginRight="65dp"
                            android:background="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearCorporatorrr"
                        android:layout_width="250dp"
                        android:layout_height="70sp"
                        android:layout_below="@+id/linearEmployer"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/job_seeker_background"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/corporator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="18dp"
                            android:gravity="center_horizontal"
                            android:text="CORPORATOR"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_below="@+id/corporator"
                            android:layout_marginLeft="52dp"
                            android:layout_marginTop="-26dp"
                            android:layout_marginRight="52dp"
                            android:background="@color/white"
                            android:gravity="center" />

                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>