<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmployerActivity.AllEmployeeListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical"
            android:text="All Employee List"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/arrowEmployeeList"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/black" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_border"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:weightSum="10"
        android:layout_marginEnd="15dp">

    <!--    <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:layout_weight="9"
            android:hint="Search By Category name, and range"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />-->

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchEmployee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            app:queryHint="Search By Category name, and range"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"/>



        <ImageView
            android:id="@+id/filterImage"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/filter"
            app:tint="@color/skyBlue" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/recyclerEmployeeList"/>



</LinearLayout>