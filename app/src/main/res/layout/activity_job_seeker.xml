<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstInterfaceApp.JobSeekerActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgbackJobseeker"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:tint="@color/black" />


            <TextView
                android:id="@+id/jobseekerrrrr"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:text="JOB SEEKER"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view1"
                android:layout_width="105dp"
                android:layout_height="3dp"
                android:layout_below="@+id/jobseekerrrrr"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="58dp"
                android:background="@color/black" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/job_seeker_interface"
            android:weightSum="10">

            <LinearLayout
                android:id="@+id/linearTempraryUnique"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="4"
                android:background="@drawable/job_seeker_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/temporaryJobs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="10dp"

                        android:gravity="center_horizontal"
                        android:text="TEMPORARY"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewTemporary"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_below="@+id/temporaryJobs"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="4"
                        android:background="@color/white"
                        android:gravity="center" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearOR"
                android:layout_width="0dp"
                android:layout_height="70sp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Or"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="18dp"
                        android:gravity="center_horizontal"
                        android:text="OR"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewOr"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_below="@+id/jobSeeker"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearPermanentUnique"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_weight="4"
                android:background="@drawable/job_seeker_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/permanentJobs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_horizontal"
                        android:text="PERMANENT"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewPermanent"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_below="@+id/permanentJobs"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/white"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
