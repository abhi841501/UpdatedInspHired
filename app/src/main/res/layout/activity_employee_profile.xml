<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue"
    android:orientation="vertical"
    tools:context=".EmployeeActivity.EmployeeProfileActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/backArrowProfileEmployee"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/black" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="10dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            tools:ignore="Suspicious0dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/userProfileEmployeeee"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:src="@drawable/employee" />


                            <ImageView
                                android:id="@+id/addImage"
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="75dp"
                                android:src="@drawable/ic_baseline_camera_alt_24"
                                app:tint="@color/darkgrey" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="9">


                                <TextView
                                    android:id="@+id/empName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center_vertical"
                                    android:layout_weight="6"
                                    android:text="Robert Mitchell"
                                    android:textColor="@color/black"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:layout_gravity="center"
                                    android:text="In Active"
                                    android:gravity="right"
                                    android:textColor="@color/Red"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/empNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="8593859499"
                                android:textColor="@color/black"
                                android:textSize="15dp" />


                            <TextView
                                android:id="@+id/empEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="robert@11gmail.com"
                                android:textColor="@color/black"
                                android:textSize="15dp" />




                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="14dp"
                app:cardElevation="40dp"
                app:cardCornerRadius="15dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="Fill All Details"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_border"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <EditText
                            android:id="@+id/EmpUserIdpp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:hint="Enter Employee Id"
                            android:inputType="number"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/background_border">

                  <!--      <EditText
                            android:id="@+id/Category11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:hint="Category"
                            android:inputType="textEmailAddress"
                            android:padding="6dp"
                            android:textSize="15dp" />-->

                        <Spinner
                            android:id="@+id/Spinner11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="10dp"
                            android:popupBackground="@drawable/spinner_background"
                            app:tint="@color/black" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_border"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <EditText
                            android:id="@+id/EmpDailyRatepp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:hint="Enter Daily Rate"
                            android:inputType="number"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_border"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">


                        <TextView
                            android:id="@+id/uploadCvEdit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="13dp"
                            android:gravity="center_vertical"
                            android:text="Upload CV"
                            android:textSize="15dp" />

                       <!-- <com.github.barteksc.pdfviewer.PDFView
                            android:id="@+id/pdf_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="MissingClass" />-->


                        <TextView
                            android:id="@+id/uploadCV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:background="@null"
                            android:gravity="center"
                            android:text="Upload CV"
                            android:textColor="@color/blue"
                            android:textSize="15dp"
                            android:textStyle="bold" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_border"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <EditText
                            android:id="@+id/EmpHistorypp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:hint="Employment History"
                            android:inputType="textEmailAddress"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/background_border"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <EditText
                            android:id="@+id/EmpAddresspp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:hint="Enter Address"
                            android:inputType="textEmailAddress"
                            android:textSize="15dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <CheckBox
                            android:id="@+id/checkboxpp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="18dp"
                            android:buttonTint="@color/skyBlue"
                            android:textColor="@color/black" />


                        <TextView
                            android:id="@+id/term"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="18dp"
                            android:layout_toRightOf="@+id/checkboxpp"
                            android:text="Term and Conditions"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/termCondEmployee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="18dp"
                            android:layout_toRightOf="@+id/term"
                            android:text="T&amp;C"
                            android:textColor="@color/blue"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/submitEmployeeProfile"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/button_black_background"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp">
                    </androidx.appcompat.widget.AppCompatButton>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>